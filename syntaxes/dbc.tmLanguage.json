{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "DBC",
    "scopeName": "source.dbc",
    "fileTypes": [
         ".ps",
         ".cb",
         ".rl",
         ".sr"
    ],
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#dbc-content"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.dbc",
                    "comment": "Comments that start on the first column with one of the comment indicating characters",
                    "match": "^(\\.|\\+).*$\\n?"
                }
            ]
        },
        "dbc-content": {
            "comment": "Valid DBC lines",
            "patterns": [
                {
                    "include": "#string"
                },
                {
                    "include": "#keyword"
                },
                {
                    "include": "#constant"
                },
                {
                    "include": "#expression"
                },
                {
                    "match": "^[[:space:]]+\\b([[:alpha:]_]\\w*)\\b"
                }
            ]
        },
        "expression": {

        },
        "constant": {
            "patterns": [
                {
                    "name": "constant.numeric.integer",
                    "match": "\\b(?:[0-9]+\\.?[0-9]*)\\b"
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "name": "keyword.control.dbc",
                    "match": "\\b(?i:(if|else|endif|while|for|return|))\\b"
                }
            ]
        },
        "string": {
            "begin": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.dbc"
                }
            },
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.dbc"
                }
            },
            "patterns": [
                {
                    "include": "#string-content"
                }
            ],
            "name": "string.quoted.double.dbc"
        },
        "string-content": {
            "patterns": [
                {
                    "match": "\\.",
                    "name": "constant.character.escape.dbc"
                }
            ]
        }
    }
}